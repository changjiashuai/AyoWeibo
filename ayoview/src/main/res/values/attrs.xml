<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircularImage">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="whorlview_style">
        <!--<attr name="WhorlView_SmallWhorlColor" format="color" />
        <attr name="WhorlView_MiddleWhorlColor" format="color" />
        <attr name="WhorlView_BigWhorlColor" format="color" />-->

        <attr name="whorlview_circle_colors" format="string" />

        <attr name="whorlview_circle_speed" format="integer" />
        <attr name="whorlview_parallax">
            <enum name="fast" value="1" />
            <enum name="medium" value="0" />
            <enum name="slow" value="2" />
        </attr>
        <attr name="whorlview_sweepAngle" format="float" />
        <attr name="whorlview_strokeWidth" format="float" />
    </declare-styleable>

    <declare-styleable name="RippleView">
        <attr name="rv_alpha" format="integer" />
        <attr name="rv_framerate" format="integer"/>
        <attr name="rv_rippleDuration" format="integer"/>
        <attr name="rv_zoomDuration" format="integer" />
        <attr name="rv_color" format="color" />
        <attr name="rv_centered" format="boolean" />
        <attr name="rv_type" format="enum">
            <enum name="simpleRipple" value="0"/>
            <enum name="doubleRipple" value="1"/>
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="rv_ripplePadding" format="dimension" />
        <attr name="rv_zoom" format="boolean" />
        <attr name="rv_zoomScale" format="float" />

    </declare-styleable>

    <!-- VerticalBannerView -->
    <declare-styleable name="VerticalBannerView">
        <attr name="gap" format="integer" />
        <attr name="animDuration" format="integer"/>
    </declare-styleable>
    <!-- over -->


    <!-- spring indicator -->
    <declare-styleable name="SpringIndicator">

        <!--tab text color -->
        <attr name="siTextColor" format="reference"/>

        <!--tab text color which is selected-->
        <attr name="siSelectedTextColor" format="reference"/>

        <!--tab item bg -->
        <attr name="siTextBg" format="reference"/>

        <!--tab text size-->
        <attr name="siTextSize" format="dimension"/>

        <!--indicator bg color-->
        <attr name="siIndicatorColor" format="reference"/>

        <!--indicator bg colors. should equals your titles count-->
        <attr name="siIndicatorColors" format="reference"/>

        <!--max indicator radius-->
        <attr name="siRadiusMax" format="dimension"/>

        <!--min indicator radius when moving-->
        <attr name="siRadiusMin" format="dimension"/>

    </declare-styleable>


    <declare-styleable name="RoundCornerIndicaor">
        <!-- width of indicators -->
        <attr name="rci_width" format="dimension"/>
        <!-- height of indicators -->
        <attr name="rci_height" format="dimension"/>
        <!-- the spacing between the indicator. -->
        <attr name="rci_gap" format="dimension"/>
        <!-- cornerRadius of the indicator. -->
        <attr name="rci_cornerRadius" format="dimension"/>
        <!-- width of the stroke used to draw the indicators. -->
        <attr name="rci_strokeWidth" format="dimension"/>
        <!-- color of the indicator that represents the current page. -->
        <attr name="rci_selectColor" format="color"/>
        <!-- color of the indicator that represents pages. -->
        <attr name="rci_unselectColor" format="color"/>
        <!-- color of the stroke used to draw the indicators. -->
        <attr name="rci_strokeColor" format="color"/>
        <!-- Whether or not the selected indicator snaps to the indicators. -->
        <attr name="rci_isSnap" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="FlycoPageIndicaor">
        <!-- indicator width, unit dp,default 6dp -->
        <attr name="fpi_width" format="dimension"/>
        <!-- indicator height,unit dp,default 6dp -->
        <attr name="fpi_height" format="dimension"/>
        <!-- indicator space between two indicators,unit dp,default 6dp -->
        <attr name="fpi_gap" format="dimension"/>
        <!-- width of the stroke used to draw the indicators,default 0dp -->
        <attr name="fpi_strokeWidth" format="dimension"/>
        <!-- color of the stroke used to draw the indicators,default "#ffffff" -->
        <attr name="fpi_strokeColor" format="color"/>
        <!-- Whether or not the selected indicator snaps to the indicators,default false -->
        <attr name="fpi_isSnap" format="boolean"/>
        <!-- indicator select color ,default "#ffffff" -->
        <attr name="fpi_selectColor" format="color"/>
        <!-- indicator unselect color ,default "#88ffffff"  -->
        <attr name="fpi_unselectColor" format="color"/>
        <!-- indicator corner raduis ,unit dp,default 3dp -->
        <attr name="fpi_cornerRadius" format="dimension"/>
        <!-- indicator select drawable resource -->
        <attr name="fpi_selectRes" format="reference"/>
        <!-- indicator unselect drawable resource -->
        <attr name="fpi_unselectRes" format="reference"/>
    </declare-styleable>
</resources>
